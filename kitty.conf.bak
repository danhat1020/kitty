# font
# font_family      family="FiraCode Nerd Font Mono"
# font_size 17.5
# modify_font cell_height 1px
# modify_font cell_width -1px
# font_family      family="D2CodingLigature Nerd Font Mono"
# font_size 19
# modify_font cell_height 0px
# modify_font cell_width 0px
font_family      family="IosevkaTerm Nerd Font Mono"
font_size 19
modify_font cell_height 0px
modify_font cell_width 0px
disable_ligatures always
text_composition_strategy legacy
# cursor
cursor #c0c0c0
cursor_text_color #000000
cursor_blink_interval 0
# --> cursor trail
cursor_trail 1
cursor_trail_start_threshold 0
cursor_trail_decay 0.08 0.18
cursor_trail_color #b0b0b0
# performance tuning
repaint_delay 16
input_delay 5
# window layout
remember_window_size  no
single_window_padding_width 0
hide_window_decorations yes
confirm_os_window_close 0
# color scheme
foreground #f0f0f0
background #040002
selection_foreground #8a8eac
selection_background #1e3a66
# --> colors
color0 #000000
color8 #684432
color1 #ac2e31
color9 #ff3d48
color2  #31ac61
color10 #3bff99
color3  #ac4300
color11 #ff5e1e
color4  #2d57ac
color12 #4488ff
color5  #b08528
color13 #ffc21d
color6  #1fa6ac
color14 #1ffaff
color7  #8a8eac
color15 #f0f0f0
# advanced
allow_remote_control yes
shell_integration no-cursor
term xterm-kitty
# keyboard shortcuts
# --> miscellaneous
map ctrl+shift+,   load_config_file
